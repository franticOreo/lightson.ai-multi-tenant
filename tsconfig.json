{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es5",
    "allowJs": true,
    "strict": true, // Note: One had false, another true. Choose based on your strictness requirement.
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react", // Note: If you're using Next.js, you might want to keep it as "preserve".
    "sourceMap": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "incremental": true,
    "noEmit": true, // Note: Important for Next.js, might not be desired for other setups.
    "paths": {
      "node_modules/*": ["./node_modules/*"],
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}